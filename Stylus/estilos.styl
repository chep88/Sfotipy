@import "normalize.styl"
@import "fonts.styl"
gris_oscuro=#333333
gris_claro=#818181

body
	font-family 'Varela Round', sans-serif
	font-size 16px

a 
	text-decoration none
figure
	margin 0
img
	vertical-align top
.container
	font-size 0
	padding 1.4rem
	text-align center
.song 
	width 8rem
	display inline-block
	font-size 1rem
	margin-right 1em
	text-align left
	&:nth-child(even)
		margin-right 0
	p
		margin .5em 0
.name
	color gris_oscuro
.author
	color gris_claro
.menu
	display none
	
.header
	height 3.5em
	position relative
	.title
		font-size 1.1em
		text-align center
		margin 0
		line-height 3.5em
.playing
	&.small 
		width 20em
//buttons
.button-menu
	color gris_oscuro 
	left 0.5em
	margin-top -10px
	position absolute
	top 50%
//oocss
.actions
	bottom 0
	right 0
	left 0
	padding 1em
	position absolute
	background rgba(0,0,0,.3)
.action
	color white
	margin-right 0.5em
	&:last-child
		margin-right 0
	&.gray
		color gris_oscuro
		
.relative
	position relative
.border-bottom
	border-bottom 1px solid 
.center-block
	margin 0 auto
.center-text
	text-align center
.right-text
	text-align right
.padding-tb
	padding-rigth 10px
.progress
	margin 1em 0
	position relative 
	.min 
	.max
		position absolute
		font-size 0.8em 
		top -5px
	.max
		right 0
	.min
		left 0
	.total
		height 5px
		width 75%
		background-color gris_claro
		margin 0 auto
		border-radius 10px
	.state
		height 5px
		width 30%
		background-color #F91FA2
		position relative
	.circle
		height 10px
		width 10px
		background-color gris_oscuro
		border-radius 50%
		position absolute
		top -2px
		right 0